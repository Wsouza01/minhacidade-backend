{
	"type": "module",
	"scripts": {
		"start": "node dist/server.js",
		"dev": "tsx --env-file .env  --watch src/server.ts",
		"db:seed": "tsx --env-file .env src/db/seed.ts",
		"db:seed-prod": "tsx --env-file .env src/db/seed-prod.ts",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:studio": "drizzle-kit studio",
		"format": "pnpm exec biome format --write",
		"test": "vitest",
		"test:run": "vitest run --coverage",
		"build": "tsc",
		"generate:drizzle-config": "node scripts/build-drizzle-config.cjs",
		"seed:full": "pnpm run build && node dist/db/seed.js"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.8",
		"@types/bcrypt": "^6.0.0",
		"@types/bcryptjs": "^3.0.0",
		"@types/node": "^24.10.1",
		"@types/nodemailer": "^7.0.4",
		"@types/supertest": "^6.0.3",
		"@vitest/coverage-v8": "4.0.14",
		"drizzle-seed": "^0.3.1",
		"supertest": "^7.1.4",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3",
		"ultracite": "6.3.8",
		"vitest": "^4.0.14"
	},
	"dependencies": {
		"@fastify/cors": "^11.1.0",
		"@fastify/multipart": "^9.3.0",
		"@fastify/static": "^8.3.0",
		"@fastify/swagger": "^9.6.1",
		"@fastify/swagger-ui": "^5.2.3",
		"@paralleldrive/cuid2": "^3.1.0",
		"@scalar/fastify-api-reference": "^1.40.0",
		"bcrypt": "^6.0.0",
		"bcryptjs": "^3.0.3",
		"dotenv": "^17.2.3",
		"drizzle-kit": "^0.31.7",
		"drizzle-orm": "^0.44.7",
		"fastify": "^5.6.2",
		"fastify-type-provider-zod": "^6.1.0",
		"nodemailer": "^7.0.11",
		"postgres": "^3.4.7",
		"uuidv7": "^1.1.0",
		"zod": "^4.1.13"
	},
	"packageManager": "pnpm@10.24.0"
