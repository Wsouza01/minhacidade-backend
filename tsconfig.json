{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"lib": ["es2024"],
		"module": "nodenext",
		"target": "es2024",
		"strict": false,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"moduleResolution": "node16",
		"outDir": "./dist",
		"rootDir": "./src",
		"resolveJsonModule": true
	},
	"include": ["src/**/*"],
	"exclude": [
		"node_modules",
		"dist",
		"infra",
		"**/*.spec.ts",
		"**/*.test.ts",
		"**/*.bak"
	]
}
